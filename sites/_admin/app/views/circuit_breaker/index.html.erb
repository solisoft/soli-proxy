<!-- Header -->
<div class="flex items-center justify-between mb-6">
    <p class="text-sm text-slate-400">Circuit breaker state per backend target. Protects against cascading failures.</p>
    <button onclick="CBManager.resetAll()" class="px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors flex items-center gap-2">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182" /></svg>
        Reset All
    </button>
</div>

<!-- Circuit Breaker Cards -->
<div id="cb-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <div class="bg-slate-900/60 border border-white/5 rounded-xl p-8 text-center col-span-full">
        <span class="text-slate-500">Loading circuit breaker states...</span>
    </div>
</div>

<script>
var CBManager = {
    load: function() {
        AdminAPI.getCircuitBreaker().then(function(d) {
            CBManager.render(d.data);
        }).catch(function() {
            document.getElementById('cb-grid').innerHTML =
                '<div class="bg-slate-900/60 border border-white/5 rounded-xl p-8 text-center col-span-full">' +
                '<span class="text-rose-400">Failed to load circuit breaker states</span></div>';
        });
    },

    render: function(states) {
        var grid = document.getElementById('cb-grid');

        if (!states || typeof states !== 'object' || !Object.keys(states).length) {
            grid.innerHTML = '<div class="bg-slate-900/60 border border-white/5 rounded-xl p-8 text-center col-span-full">' +
                '<div class="text-slate-500 mb-2">No circuit breaker states</div>' +
                '<div class="text-xs text-slate-600">Circuit breakers are created when backend targets receive traffic</div></div>';
            return;
        }

        grid.innerHTML = Object.entries(states).map(function(entry) {
            var target = entry[0];
            var state = entry[1];
            var st = (state.state || 'unknown').toLowerCase();
            var stateDisplay = st.replace(/_/g, '-');

            var stateColor, stateBg, borderColor, dotColor;
            if (st === 'closed') {
                stateColor = 'text-emerald-400'; stateBg = 'bg-emerald-500/10'; borderColor = 'border-emerald-500/20'; dotColor = 'bg-emerald-400';
            } else if (st === 'open') {
                stateColor = 'text-rose-400'; stateBg = 'bg-rose-500/10'; borderColor = 'border-rose-500/20'; dotColor = 'bg-rose-400';
            } else {
                stateColor = 'text-amber-400'; stateBg = 'bg-amber-500/10'; borderColor = 'border-amber-500/20'; dotColor = 'bg-amber-400';
            }

            return '<div class="bg-slate-900/60 border border-white/5 rounded-xl p-5">' +
                '<div class="flex items-center justify-between mb-4">' +
                    '<h3 class="text-sm font-mono text-white truncate mr-2" title="' + AdminAPI.esc(target) + '">' + AdminAPI.esc(target) + '</h3>' +
                    '<span class="shrink-0 flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium border ' + stateBg + ' ' + stateColor + ' ' + borderColor + '">' +
                        '<span class="w-1.5 h-1.5 rounded-full ' + dotColor + '"></span>' +
                        stateDisplay +
                    '</span>' +
                '</div>' +
                '<div class="grid grid-cols-2 gap-3">' +
                    '<div class="bg-slate-800/50 rounded-lg p-3 text-center">' +
                        '<div class="text-lg font-bold text-rose-400">' + (state.failure_count || 0) + '</div>' +
                        '<div class="text-xs text-slate-500">Failures</div>' +
                    '</div>' +
                    '<div class="bg-slate-800/50 rounded-lg p-3 text-center">' +
                        '<div class="text-lg font-bold text-emerald-400">' + (state.success_count || 0) + '</div>' +
                        '<div class="text-xs text-slate-500">Successes</div>' +
                    '</div>' +
                '</div>' +
                (state.last_failure_time ? '<div class="mt-3 text-xs text-slate-500">Last failure: ' + new Date(state.last_failure_time).toLocaleString() + '</div>' : '') +
            '</div>';
        }).join('');
    },

    resetAll: function() {
        if (!confirm('Reset all circuit breaker states?')) return;
        AdminAPI.resetCircuitBreaker().then(function() {
            AdminAPI.toast('Circuit breakers reset', 'success');
            CBManager.load();
        }).catch(function(err) {
            AdminAPI.toast('Failed: ' + err.message, 'error');
        });
    }
};

CBManager.load();
setInterval(function() { CBManager.load(); }, 5000);
</script>
